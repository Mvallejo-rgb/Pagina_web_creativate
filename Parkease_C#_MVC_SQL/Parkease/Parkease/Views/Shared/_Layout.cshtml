<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Parkease</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Protest+Strike&family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imagenes/logo2.png" alt="Parkease" height="100" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="navbar-text text-light fw-bold">
                                    👤 Bienvenido, @Context.Session.GetString("Email")
                                </span>
                            </li>
                            <!-- Usuario autenticado -->
                          
                            <li class="nav-item">
                                <a class="nav-link" href="/DashBoard/Index">🏠 Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Reserva/Create">Reserva</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Facturacion/Factura">Factura</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Perfil/Index">👤 Mi Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/Auth/Logout">🚪 Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <!-- Usuario no autenticado -->
                            <li class="nav-item">

                                <a class="nav-link" href="/Home/Index">🏠 Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Contacto">Contactános</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Nosotros">Nosotros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Login">👤 Iniciar Sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Registro">👥 Registro</a>
                            </li>
                        }
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container1">
            <div class="footer-content">
                <div class="footer-links">
                    <h4 class="h4"><b>CONTACTO</b></h4>
                    <ul>
                        <br>
                        <li class="li-footer">PBX</li>
                        <li><a href="tel:+57(1)6864444">+ 57 (1)6864444</a></li>
                        <li class="li-footer">Servicio al cliente</li>
                        <li><a href="+ 573142307864">+ 57 3112818618</a></li>
                        <li>
                            <a href="mailto:ejemplo@correo.com?subject=Hola&body=Mensaje%20aquí">parkease@gmail</a>
                        </li>
                        <br>
                    </ul>
                </div>
                <div class="footer-links">
                    <h4><b>NOSOTROS</b></h4>
                    <ul>
                        <li class="li-footer">Documentación</li>
                        <li class="li-footer">Misíon</li>
                        <li class="li-footer">Visión</li>
                        <li class="li-footer"><a href="@Url.Action("Error500", "Error")">Error 500</a></li>
                        <li class="li-footer"><a href="@Url.Action("Error404", "Error")">Error 404</a></li>
                        <br />
                    </ul>
                </div>
                <div class="footer-links">
                    <h4><b>DESCARGA LA APP</b></h4>
                    <div class="download-app">
                        <a href="https://www.apple.com/store">
                            <i class="fa-brands fa-apple"></i>
                            <span class="span-footer">App store</span>
                        </a>
                        <a href="https://play.google.com/store/games?device=windows&pli=1ap">
                            <i class="fa-brands fa-android"></i>
                            <span class="span-footer">Play store</span>
                        </a>
                    </div>
                    <br>
                    </ul>
                </div>
                <div class="footer-links">
                    <h4><b>SUSCRIBETE</b></h4>
                    <div class="input-send">
                        <input class="email" type="text" placeholder="Correo electrónico">
                        <button class="button">Enviar</button>
                    </div>
                    <br>
                    <div class="social-link">
                        <a href="https://www.facebook.com/"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a>
                        <a href="https://x.com/__x?mx=2"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <br>
        <p class="p-footer">
            &#169 Derechos registrados ParkEase | 2025.
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>