@model Parkease.Models.Entidades.Vehiculo

@{
    ViewData["Title"] = "Registrar Vehículo";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 600px; margin: auto; border-radius: 15px;">
        <h2 class="mb-4 text-center bg-primary text-white p-3 rounded">
            Registrar Vehículo
        </h2>

        <form asp-action="Create" asp-controller="Vehiculos" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            @* ✅ Muestra los mensajes de error *@
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="colorVeh" class="form-label fw-bold">Color:</label>
                <input asp-for="colorVeh" class="form-control border-primary" required />
                <span asp-validation-for="colorVeh" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Tipo de Vehículo:</label>
                <select asp-for="tipoVeh" class="form-select border-primary" required>
                    <option value="" selected disabled>Seleccione un tipo</option>
                    <option value="Carro">Carro</option>
                    <option value="Moto">Moto</option>
                    <option value="Bicicleta">Bicicleta</option>
                    <option value="Otros">Otros</option>
                </select>
                <span asp-validation-for="tipoVeh" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label asp-for="placaVeh" class="form-label fw-bold">Placa:</label>
                <input asp-for="placaVeh" class="form-control border-primary text-uppercase" required />
                <span asp-validation-for="placaVeh" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label asp-for="modeloVeh" class="form-label fw-bold">Modelo:</label>
                <input asp-for="modeloVeh" class="form-control border-primary" required />
                <span asp-validation-for="modeloVeh" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label asp-for="marcaVeh" class="form-label fw-bold">Marca:</label>
                <input asp-for="marcaVeh" class="form-control border-primary" required />
                <span asp-validation-for="marcaVeh" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Imagen del vehículo:</label>
                <input name="imagen" type="file" class="form-control border-primary" accept="image/*" required onchange="previewImage(event)" />
                <span class="invalid-feedback">Seleccione una imagen válida.</span>
                <div class="mt-3 text-center">
                    <img id="imagePreview" src="#" class="img-fluid rounded shadow" style="max-height: 200px; display: none;" />
                </div>
            </div>
            <div class="d-flex flex-wrap justify-content-between mt-4 gap-3">
                <button type="submit" class="btn btn-success px-4">✅ Registrar</button>
                <a asp-action="Index" class="btn btn-info text-white px-4">📂 Mis Vehículos</a>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger px-4">🔙 Atrás</a>
            </div>
        </form>
    </div>
</div>

@* ✅ Scripts para validación en el lado del cliente *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Bootstrap 5 validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function(){
                var output = document.getElementById('imagePreview');
                output.src = reader.result;
                output.style.display = "block";
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}