@model List<Parkease.Models.Entidades.Vehiculo>

<h2>Lista de Vehículos</h2>
<br />

<div style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var vehiculo in Model)
    {
        <div style="border: 1px solid #ddd; border-radius: 10px; padding: 15px; width: 250px; text-align: center;">
            <img src="@Url.Content(vehiculo.imagenReserva)" alt="Imagen del vehículo" style="width: 100%; height: 150px; object-fit: cover; border-radius: 10px;">
            <h3>@vehiculo.placaVeh</h3>
            <div class="card-body text-center">
                <h4 class="card-title">@vehiculo.placaVeh</h4>
                <p><strong>Modelo:</strong> @vehiculo.modeloVeh</p>
                <p><strong>Color:</strong> @vehiculo.colorVeh</p>

                <div class="d-grid gap-2">
                    <a asp-action="VerVehiculo" asp-route-id="@vehiculo.idVehiculo"
                       class="btn btn-primary">
                        <i class="fas fa-eye"></i> Ver Detalles
                    </a>
                    <a asp-controller="DashBoard" asp-action="Index"
                       class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Atrás
                    </a>
                </div>
            </div>
        </div>
    }
</div>
