<div class="container mt-5">
    <h3 class="text-center mb-4">💡 Envíanos tus sugerencias</h3>
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-lg p-4">
                <form>
                    <div class="mb-3">
                        <label for="sugerencia" class="form-label fw-bold">Tu sugerencia:</label>
                        <textarea id="sugerencia" class="form-control" rows="5" placeholder="Escribe aquí tu sugerencia con más detalles..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="imagenSugerencia" class="form-label fw-bold">Sube una imagen:</label>
                        <input type="file" id="imagenSugerencia" class="form-control" accept="image/*" onchange="previewImage(event)">
                    </div>

                    <div class="text-center">
                        <img id="preview" class="img-fluid mt-3 rounded shadow-sm" style="max-width: 100%; height: auto; display: none;">
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">📩 Enviar Sugerencia</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function () {
            var preview = document.getElementById('preview');
            preview.src = reader.result;
            preview.style.display = 'block';
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
